    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Menu>
                <MenuItem Header="选项">
                    <MenuItem x:Name="menuItem_saveConfigAs" Header="配置另存为" Click="menuItem_saveConfigAs_Click"></MenuItem>
                    <MenuItem x:Name="menuItem_loadConfig" Header="加载配置" Click="menuItem_loadConfig_Click"></MenuItem>
                    <MenuItem x:Name="menuItem_appendConfig" Header="附加配置" Click="menuItem_appendConfig_Click"></MenuItem>
                    <MenuItem x:Name="menuItem_removeConfig" Header="移除配置" Click="menuItem_removeConfig_Click"></MenuItem>
                </MenuItem>
            </Menu>
            <TextBox x:Name="tbx_adapterMappingIp" IsReadOnly="True" Grid.Row="1" AcceptsReturn="True"/>
            <TabControl Grid.Row="2" TabStripPlacement="Left">
                <TabItem Header="列&#xD;&#xA;表">
                    <ListBox x:Name="lbx_mappingList" ItemContainerStyle="{StaticResource portForwardingItemStyle}"/>
                </TabItem>
                <TabItem Header="配&#xD;&#xA;置">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Button x:Name="btn_selectConfig2ConfigPanel" Grid.Row="0" Content="选择配置加载" Margin="15,10,0,10" HorizontalAlignment="Left" Click="btn_selectConfig2ConfigPanel_Click"></Button>
                        <!--<ListBox x:Name="lbx_configPanel" Grid.Row="1" Style="{StaticResource lbx_configPanel_Style}">
                            
                        </ListBox>-->
                        <DataGrid Grid.Row="1" x:Name="dataGrid_configPanel" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="IP地址" IsReadOnly="True" Binding="{Binding Path=SrcIpAddr}"></DataGridTextColumn>
                                <DataGridTextColumn Header="端口" IsReadOnly="True" Binding="{Binding Path=SrcPort}"></DataGridTextColumn>
                                <DataGridTextColumn Header="IP地址" IsReadOnly="True" Binding="{Binding Path=DestIpAddr}"></DataGridTextColumn>
                                <DataGridTextColumn Header="端口" IsReadOnly="True" Binding="{Binding Path=DestPort}"></DataGridTextColumn>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Button Content="启用">
                                                    <!--<Binding>
                                                        <Binding.Converter>
                                                            <local:CaseConverter></local:CaseConverter>
                                                        </Binding.Converter>
                                                    </Binding>-->
                                                </Button>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
            </TabControl>
            <TextBox Grid.Row="3" x:Name="tbx_console" IsReadOnly="True" TextWrapping="Wrap" Text="" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
            <StatusBar Grid.Row="4">
                <StatusBarItem>
                    <TextBox Width="120" IsReadOnly="True" Background="Transparent" BorderThickness="0" Text="{Binding ElementName=window, Path=Version, StringFormat=Version {0}}"></TextBox>
